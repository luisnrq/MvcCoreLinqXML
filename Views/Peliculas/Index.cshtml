@model IEnumerable<MvcCoreLinqXML.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPelicula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TituloOriginal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPelicula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TituloOriginal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <img src="@item.Poster" style="width:150px;height:150px" />
            </td>
            <td>
                <a asp-controller="Peliculas" asp-action="EscenasPeliculas" asp-route-idpelicula="@item.IdPelicula" >Escenas</a> <br />|
                <a asp-controller="Peliculas" asp-action="EscenaPelicula" asp-route-idpelicula="@item.IdPelicula" >Escenas Paginadas</a> |<br />
                <a asp-controller="Peliculas" asp-action="DetailPelicula" asp-route-idpelicula="@item.IdPelicula" >Escenas Paginadas Ajax</a>
            </td>
        </tr>
}
    </tbody>
</table>
