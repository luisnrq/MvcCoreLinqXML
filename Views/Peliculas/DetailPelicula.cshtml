@model List<Pelicula>

@{
    ViewData["Title"] = "EscenaPelicula";
    int idpeli = (int)ViewData["IDPELICULA"];
}

<input type="hidden" value="@idpeli" id="idpelicula" />

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#cargarVista2").click(function () {
                var idpelicula = $("#idpelicula").val();
                //Controller/Action?id=3
                //Controller/Action?id=3&otro=valor
                //Controller/Action/3
                var request = "/Peliculas/_DetailPelicula?idpelicula=" + idpelicula;
                $("#vista").load(request);
            });
        });
    </script>
}

@foreach (Pelicula peli in Model)
{
    if (peli.IdPelicula == idpeli)
    {

        <dl class="row">
            <dt class="col-sm-2">
               IdPelicula
            </dt>
            <dd class="col-sm-10">
                @peli.IdPelicula
            </dd>
            <dt class="col-sm-2">
                Titulo
            </dt>
            <dd class="col-sm-10">
                @peli.Titulo
            </dd>
            <dt class="col-sm-2">
                Descripcion
            </dt>
            <dd class="col-sm-10">
                @peli.Descripcion
            </dd>
            <dt class="col-sm-2">
                Imagen
            </dt>
            <dd class="col-sm-10">
                <img src="@peli.Poster"
                     style="width:250px; height: 200px" />
            </dd>
        </dl>
    }

}

<button id="cargarVista2">Cargar Escenas</button>
<div id="vista"></div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
